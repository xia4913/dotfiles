# show selected keymap in right prompt 
function zle-keymap-select zle-line-init zle-line-finish {
    local label
	if [[ $KEYMAP != main ]]; then
		label=$KEYMAP
	fi
    if [[ $label != $psvar[1] ]]; then
		psvar[1]=$label
    	zle reset-prompt
    fi
}
zle -N zle-keymap-select
zle -N zle-line-init
zle -N zle-line-finish
